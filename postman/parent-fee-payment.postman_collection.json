    "_exporter_id": "kidslink-ai"
  },
  "item": [
    {
      "name": "1. Create PayOS Payment - Success",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{PARENT_TOKEN}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"student_id\": \"{{STUDENT_ID}}\",\n  \"student_class_id\": \"{{STUDENT_CLASS_ID}}\",\n  \"class_fee_id\": \"{{CLASS_FEE_ID}}\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/parent/fees/payos",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "parent",
            "fees",
            "payos"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const res = pm.response.json();",
              "pm.test('Status 200', () => pm.response.code === 200);",
              "pm.test('PayOS data trả về đầy đủ', () => {",
              "  pm.expect(res.success).to.be.true;",
              "  pm.expect(res.data.checkout_url).to.exist;",
              "  pm.expect(res.data.qr_code).to.exist;",
              "});",
              "pm.environment.set('PAYOS_ORDER_CODE', res.data.order_code);",
              "pm.environment.set('PAYOS_CHECKOUT_URL', res.data.checkout_url);",
              "pm.environment.set('PAYOS_QR_CODE', res.data.qr_code);"
            ]
          }
        }
      ]
    },
